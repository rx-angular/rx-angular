{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "cdk",
        "template",
        "state",
        "docs",
        "demos",
        "schematics",
        "ci",
        "eslint"
      ]
    ],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      ["fix", "feat", "perf", "docs", "refactor", "test", "chore"]
    ]
  }
}
