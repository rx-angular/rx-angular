{
  "name": "ssr",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/ssr/src",
  "prefix": "rx-angular",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "options": {
        "outputPath": "dist/apps/ssr",
        "index": "apps/ssr/src/index.html",
        "browser": "apps/ssr/src/main.ts",
        "server": "apps/ssr/src/main.server.ts",
        "ssr": {
          "entry": "apps/ssr/server.ts"
        },
        "polyfills": ["apps/ssr/src/polyfills.ts"],
        "tsConfig": "apps/ssr/tsconfig.app.json",
        "assets": ["apps/ssr/src/favicon.ico", "apps/ssr/src/assets"],
        "styles": ["apps/ssr/src/styles.css"],
        "scripts": [],
        "outputMode": "server",
        "extractLicenses": false,
        "sourceMap": true,
        "optimization": false
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/ssr/src/environments/environment.ts",
              "with": "apps/ssr/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "extractLicenses": true,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "10kb"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "buildTarget": "ssr:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "ssr:build:production"
        }
      },
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "ssr:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/ssr"],
      "options": {
        "jestConfig": "apps/ssr/jest.config.ts",
        "tsConfig": "apps/ssr/tsconfig.spec.json"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/ssr/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "ssr:serve"
      },
      "configurations": {
        "production": {
          "devServerTarget": "ssr:serve:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
